msgstr ""

#: ../../preinstall.rst:41
# 8944865e4bf347efab2de8bf13fc4851
msgid "The following are the minimum **recommended** requirements. The more RAM and available disk space, the better your computing experience:"
msgstr ""

#: ../../preinstall.rst:45
# dc8b3506c5de469dbba525314e4bf193
msgid "4 GB of RAM"
msgstr ""

#: ../../preinstall.rst:47
# 6d3e0ca0cd8b4f4b9273771e00e08bd0
msgid "50GB of free hard drive space on a primary partition for a desktop installation"
msgstr ""

#: ../../preinstall.rst:51
# 8d0cf9f1e1d3457286173bd662727d71
msgid "Sound card"
msgstr ""

#: ../../preinstall.rst:53
# d8c388dc652b4e0c960c5032f8d1e223
